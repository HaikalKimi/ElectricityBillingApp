<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F8F9F9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill Breakdown"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#1A5276"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center_horizontal"/>

    <TextView android:id="@+id/detailMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:text="Billing Month: "/>

    <TextView android:id="@+id/detailUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:text="Total Usage: "/>

    <TextView android:id="@+id/detailTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:text="Total Charges: "/>

    <TextView android:id="@+id/detailRebate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:text="Rebate Applied: "/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#1A5276"
        android:layout_marginVertical="16dp"/>

    <TextView android:id="@+id/detailFinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#27AE60"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/btnDeleteDetail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Delete This Record"
        android:textColor="#C0392B"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="#C0392B"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnBackHistory"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Back to History"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:backgroundTint="#1A5276"/>

</LinearLayout>